{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
    layout ? 'layout--' ~ layout|clean_class,
  ]
%}

<div{{attributes.addClass(classes)}}>
	{{ attach_library('lelohex/product-css') }}
	{% block content %}
  	{{ content.field_product }}
		<div class="product">
			{{ content.field_product_title }}
			{{ content.body }}
		</div>
	{% endblock %}
</div>
